{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "server/dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext.intl",
      "es2017.intl",
      "es2018.intl"
    ]
  },
  "include": [
    "client/**/*.tsx",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}